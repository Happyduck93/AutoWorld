            </div>
            <div class="form-group">
                <label asp-for="CategoryDescr" class="col-form-label-lg"></label>
                <input asp-for="CategoryDescr" class="form-control" />
                <span asp-validation-for="CategoryDescr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AbbrCd" class="col-form-label-lg"></label>
                <input asp-for="AbbrCd" class="form-control" />
                <span asp-validation-for="AbbrCd" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Create New Category" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

