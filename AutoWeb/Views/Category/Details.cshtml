@model AutoLibrary.Models.CategoryModel

<h1>Details Info</h1>

@if (Model is null)
{
    <h4>The requested record was not found.</h4>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <form asp-action="details">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="CategoryId" class="custom-control-label"></label>
                    <input asp-for="CategoryId" class="form-control" readonly />
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CategoryDescr" class="custom-control-label"></label>
                    <input asp-for="CategoryDescr" class="form-control" />
                    <span asp-validation-for="CategoryDescr" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AbbrCd" class="custom-control-label"></label>
                    <input asp-for="AbbrCd" class="form-control" />
                    <span asp-validation-for="AbbrCd" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ActiveYn" class="custom-control-label"></label>
                    &nbsp;&nbsp;<input type="checkbox" asp-for="ActiveYn" class="form-check-label" style="vertical-align:middle" />
                    <span asp-validation-for="ActiveYn" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Update Category Info" class="btn btn-outline-primary btn-block" />
                </div>


                <div class="form-group">
                    <a asp-action="Delete" asp-route-categoryId="@Model.CategoryId" class="btn btn-danger btn-block">
                        Delete Category Info
                    </a>
                </div>

            </form>
        </div>
    </div>

    <div>
        @*asp-action :해당되는 컨트롤러에 찾아가서 인덱스를 실행*@
        <a asp-action="Index">Back to List</a>
    </div>
}