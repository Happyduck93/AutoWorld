@model AutoLibrary.Models.BrandModel

<h1>Create New Brand</h1>

<div class="row">
    <div class=" col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="BrandName" class="col-form-label-lg"></label>
                <input asp-for="BrandName" class="form-control" />
                <span asp-validation-for="BrandName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BrandCodeId" class="col-form-label-lg"></label>
                <select asp-for="BrandCodeId" asp-items="@Model.CodeList" class="form-control"></select>
                <span asp-validation-for="BrandCodeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EstablishmentDate" class="col-form-label-lg"></label>
                <input asp-for="EstablishmentDate" class="form-control" />
                <span asp-validation-for="EstablishmentDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BrandDescr" class="col-form-label-lg"></label>
                <input asp-for="BrandDescr" class="form-control" />
                <span asp-validation-for="BrandDescr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Headquarters" class="col-form-label-lg"></label>
                <input asp-for="Headquarters" class="form-control" />
                <span asp-validation-for="Headquarters" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create New Brand" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}